                            </Frame.GestureRecognizers>
                            <HorizontalStackLayout>
                                <Label Text="{Binding name}"  Margin="2,2,2,2"></Label>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

